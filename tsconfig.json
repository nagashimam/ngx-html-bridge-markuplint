{
	"compilerOptions": {
		"target": "ES2020",
		"module": "nodenext",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"declaration": true,
		"moduleResolution": "nodenext"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "tests"]
}
